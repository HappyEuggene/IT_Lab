@model IT_Lab.Models.TableModel

@{
    ViewData["Title"] = "Delete Table";
}

<h2>Delete Table</h2>

<h3>Are you sure you want to delete the table "@Model.Name"?</h3>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" name="name" value="@Model.Name" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
